{
    "basedir": "/blue/p.chang/jguiang/data/vbsvvh",
    "name": "ABCDNet_weakSingleDisCo",
    "model": {
        "name": "NeuralNetwork",
        "n_hidden_layers": 3,
        "hidden_size": 64
    },
    "ingress": {
        "input_dir": "output_pnetfix/Run2",
        "signal_file": "VBSVVH.root",
        "ttree_name": "tree", 
        "features": [
            "hbbfatjet_pt",
            "hbbfatjet_eta",
            "hbbfatjet_phi",
            "hbbfatjet_mass",
            "ld_vqqfatjet_pt",
            "ld_vqqfatjet_eta",
            "ld_vqqfatjet_phi",
            "ld_vqqfatjet_mass", 
            "tr_vqqfatjet_pt", 
            "tr_vqqfatjet_eta",
            "tr_vqqfatjet_phi",
            "tr_vqqfatjet_mass", 
            "M_jj"
        ],
        "transforms": {
            "hbbfatjet_pt": "log",
            "hbbfatjet_mass": "rescale",
            "ld_vqqfatjet_pt": "log",
            "ld_vqqfatjet_mass": "rescale",
            "tr_vqqfatjet_pt": "log",
            "tr_vqqfatjet_mass": "rescale",
            "M_jj": "rescale"
        },
        "weights": [
            "xsec_sf",
            "pu_sf",
            "prefire_sf"
        ],
        "disco_target": "abs_deta_jj"
    },
    "train": {
        "train_frac": 0.7,
        "test_frac": 0.2,
        "val_frac": 0.1,
        "train_batch_size": 10000,
        "test_batch_size": 100000,
        "val_batch_size": 10000,
        "learning_rate": 0.001,
        "seed": 1234,
        "scheduler_name": "StepLR",
        "scheduler_kwargs": {
            "step_size": 25,
            "gamma": 0.7
        },
        "disco_lambda": 1
    }
}
