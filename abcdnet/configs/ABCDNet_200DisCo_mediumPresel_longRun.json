{
    "basedir": "/blue/p.chang/jguiang/data/vbsvvh",
    "model": {
        "name": "NeuralNetwork",
        "n_hidden_layers": 3,
        "hidden_size": 64
    },
    "ingress": {
        "input_dir": "output_pnetfix/Run2",
        "signal_file": "VBSVVH.root",
        "ttree_name": "tree", 
        "selection": "(hbbfatjet_xbb > 0.5) & (ld_vqqfatjet_xwqq > 0.3) & (tr_vqqfatjet_xwqq > 0.3)",
        "features": [
            "hbbfatjet_pt",
            "hbbfatjet_eta",
            "hbbfatjet_phi",
            "hbbfatjet_mass",
            "ld_vqqfatjet_pt",
            "ld_vqqfatjet_eta",
            "ld_vqqfatjet_phi",
            "ld_vqqfatjet_mass", 
            "tr_vqqfatjet_pt", 
            "tr_vqqfatjet_eta",
            "tr_vqqfatjet_phi",
            "tr_vqqfatjet_mass", 
            "M_jj"
        ],
        "transforms": {
            "hbbfatjet_pt": "log",
            "hbbfatjet_mass": "rescale",
            "ld_vqqfatjet_pt": "log",
            "ld_vqqfatjet_mass": "rescale",
            "tr_vqqfatjet_pt": "log",
            "tr_vqqfatjet_mass": "rescale",
            "M_jj": "rescale"
        },
        "weights": [
            "xsec_sf",
            "pu_sf",
            "prefire_sf"
        ],
        "disco_target": "abs_deta_jj"
    },
    "train": {
        "train_frac": 0.8,
        "n_batches_train": 10,
        "n_batches_test": 5,
        "learning_rate": 0.001,
        "seed": 1234,
        "scheduler_name": "ConstantLR",
        "scheduler_kwargs": {
            "factor": 1.0
        },
        "disco_lambda": 200,
        "n_epochs": 3000
    }
}
